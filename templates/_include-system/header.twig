<section class="wrapper-outer}">
    <section class="wl-wrapper">

        <div class="header-nav-container">

            <div class="nav-item-header-left">
                <a class="navbar-brand" href="/">
                    {% if pageId == 2 %}
                        {# *** HOME *** #}
                        <img class="firmenlogo" src="/assets/images/icons/firmenlogo-weiss.svg" alt="{{siteconfig.company}}">
                    {% else %}
                        {# *** CONTENT PAGES *** #}
                        <img class="firmenlogo" src="/assets/images/icons/firmenlogo-dunkel.svg" alt="{{siteconfig.company}}">
                    {% endif %}
                </a>
            </div>

            <div class="nav-item-header-center">
                {% include '_include-atoms/navigation' %}
            </div>

            <div class="nav-item-header-right">

                <div class="nav-item-tel">
                {% set setTooltipClass = craft.app.request.isMobileBrowser() ? '' : 'simptip-position-top simptip-fade' %}
                {% if siteconfig.phone is not empty %}
                    {% set telNumber = craft.wul.phone(siteconfig.phone,'','','','','1')|raw  %}
                    <span class="{{ setTooltipClass }}" data-tooltip="{{ siteconfig.phone }}">
                    <a href="tel:{{ telNumber }}">
                            <svg class="tel-icn"  xmlns="http://www.w3.org/2000/svg" width="23.457" height="23.46" viewBox="0 0 23.457 23.46">
                              <path id="phone-icn" data-name="phone-solid (9)" d="M23.422,17.726l-1.065,4.618a1.424,1.424,0,0,1-1.4,1.11A20.985,20.985,0,0,1,0,2.491,1.423,1.423,0,0,1,1.11,1.1L5.728.031a1.438,1.438,0,0,1,1.639.83L9.5,5.833A1.434,1.434,0,0,1,9.088,7.5L6.621,9.483a16.021,16.021,0,0,0,7.308,7.308l2.02-2.465a1.425,1.425,0,0,1,1.671-.411l4.971,2.131A1.563,1.563,0,0,1,23.422,17.726Z" transform="translate(0 0.006)" fill="#042745"/>
                            </svg>
                    </a>
                    </span>
                {% endif %}
                </div>

                <div class="nav-item-mail">
                    <a href="mailto:{{siteconfig.mail}}" target="_blank">
                        {% if siteconfig.mail is not empty %}
                            <svg class="mail-icn"  xmlns="http://www.w3.org/2000/svg" width="25" height="29" viewBox="0 0 20.924 15.693">
                                <path id="email-icn" d="M18.962,64a1.962,1.962,0,0,1,1.177,3.531L11.246,74.2a1.312,1.312,0,0,1-1.569,0L.785,67.531A1.962,1.962,0,0,1,1.962,64ZM8.893,75.246a2.611,2.611,0,0,0,3.139,0l8.893-6.669v8.5a2.618,2.618,0,0,1-2.615,2.615H2.615A2.617,2.617,0,0,1,0,77.077v-8.5Z" transform="translate(0 -64)" fill="#042745"/>
                            </svg>
                        {% endif %}
                    </a>
                </div>


                {% set homeNavClass = (pageId == 2 )?' home-nav' : '' %}{# *** HOME => pageId  2 *** #}
                <div class="nav-item-language{{homeNavClass}}">
                    <a href="#">EN</a>
                </div>

            </div>

        </div>

    </section>
</section>






{% if pageId == 2 %}
{# *** HOME *** #}
    {% include '_include-system/header-body-home.twig' %}
{% else %}
    {# *** CONTENT PAGES *** #}
    {% include '_include-system/header-body-contentpages.twig' %}
{% endif %}